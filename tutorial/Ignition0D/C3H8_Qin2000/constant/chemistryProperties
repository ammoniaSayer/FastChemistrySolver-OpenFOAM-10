FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      chemistryProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

chemistryType
{
    //solver            ode;
    solver            OptRodas34;
    method            FastChemistryModel;
}

chemistry       on;
initialChemicalTimeStep 1e-7;
jacobian exact;

OptSeulexCoeffs
{
    absTol          1e-12;
    relTol          1e-6;
}

OptRosenbrock34Coeffs
{
    absTol          1e-12;
    relTol          1e-6;
}


OptRodas34Coeffs
{
    absTol          1e-12;
    relTol          1e-6;
}

odeCoeffs
{
    solver          seulex;
    absTol          1e-12;
    relTol          1e-6;
}

