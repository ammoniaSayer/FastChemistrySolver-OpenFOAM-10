FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      G;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 0 -3 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inletAir
    {
        type            MarshakRadiation;
        refValue        uniform 0;
        refGradient     uniform 0;
        valueFraction   uniform 1;
        value           uniform 0;
        emissivityMode  lookup;
        emissivity      uniform 1;
    }
    inletCH4
    {
        type            MarshakRadiation;
        refValue        uniform 0;
        refGradient     uniform 0;
        valueFraction   uniform 1;
        value           uniform 0;
        emissivityMode  lookup;
        emissivity      uniform 1;
    }
    inletPilot
    {
        type            MarshakRadiation;
        refValue        uniform 0;
        refGradient     uniform 0;
        valueFraction   uniform 1;
        value           uniform 0;
        emissivityMode  lookup;
        emissivity      uniform 1;
    }
    outlet
    {
        type            MarshakRadiation;
        refValue        uniform 0;
        refGradient     uniform 0;
        valueFraction   uniform 1;
        value           uniform 0;
        emissivityMode  lookup;
        emissivity      uniform 1;
    }
    side
    {
        type            MarshakRadiation;
        refValue        uniform 0;
        refGradient     uniform 0;
        valueFraction   uniform 1;
        value           uniform 0;
        emissivityMode  lookup;
        emissivity      uniform 1;
    }
    wallTube
    {
        type            MarshakRadiation;
        refValue        uniform 0;
        refGradient     uniform 0;
        valueFraction   uniform 1;
        value           uniform 0;
        emissivityMode  lookup;
        emissivity      uniform 1;
    }
}


